<h1>Sign Up</h1>

<% if @user.errors.any? %>
    <h3><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved</h3>

    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <% msg %>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>

    <%= f.submit "Sign Up"%>
<% end %>