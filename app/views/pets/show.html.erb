<h1><%= @pet.name %></h1>

<h2><%=@pet.animal%></h2>

<h3>Owner: <%= @pet.user.username %></h3>

<%= @pet.description %>

<h3>Comments:</h3>

<p><%= button_to 'Add a comment', new_pet_comment_path(@pet), method: :get %></p>

<% @pet.comments.each do |c| %>
    <strong><%= c.user.username %></strong> says "<%= c.content %>"
    <br>
    <br>
<% end %>